<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.signup.SignUpFragment">

    <ImageButton
        android:id="@+id/btnBack2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:src="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWelcome2"
        android:layout_width="133dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:text="@string/string_welcome"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWelcome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/string_continue"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome2" />

    <EditText
        android:id="@+id/editUser2"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cs_input"
        android:drawableStart="@drawable/cs_user_icon"
        android:drawablePadding="10dp"
        android:hint="@string/string_user"
        android:autofillHints="username"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome3" />

    <EditText
        android:id="@+id/editMail2"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/cs_input"
        android:drawableStart="@drawable/cs_mail_icon"
        android:drawablePadding="10dp"
        android:hint="@string/string_email"
        android:autofillHints="emailAddress"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editUser2" />

    <EditText
        android:id="@+id/editPassword2"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/cs_input"
        android:drawableStart="@drawable/cs_lock_icon"
        android:drawablePadding="10dp"
        android:hint="@string/string_password"
        android:autofillHints="password"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editMail2" />

    <Button
        android:id="@+id/btnLogIn2"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="@string/string_continue2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogIn2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtAccount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_with_account"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtSignup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/string_log_in2"
            android:textColor="@color/design_default_color_primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>